<div class="tab {{tab.cssClass}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
    <section class="characteristics">
        <fieldset>
            {{>heroes-unbound.heroSheet.characteristic characteristics.strength type="text" class="uppercase bold"}}
            {{>heroes-unbound.heroSheet.characteristic characteristics.presence type="text" class="uppercase bold"}}
        </fieldset>

        <fieldset>
            {{>heroes-unbound.heroSheet.characteristic characteristics.body type="number" class="uppercase bold"}}
            {{>heroes-unbound.heroSheet.characteristic characteristics.stunned type="number"}}
            {{>heroes-unbound.heroSheet.characteristic characteristics.recovery type="number"}}
            {{>heroes-unbound.heroSheet.characteristic characteristics.knockout type="number"}}
            {{>heroes-unbound.heroSheet.characteristic characteristics.endurance type="number"}}
        </fieldset>

        <fieldset>
            <div class="form-group characteristic">
                <label class="uppercase bold">{{localize "Champions.Models.Actor.Characteristics.Defense"}}</label>
            </div>
            {{>heroes-unbound.heroSheet.characteristic characteristics.ordinary type="number"}}
            {{>heroes-unbound.heroSheet.characteristic characteristics.resistant type="number"}}
            {{>heroes-unbound.heroSheet.characteristic characteristics.total type="number"}}
        </fieldset>

        <fieldset>
            {{>heroes-unbound.heroSheet.characteristic characteristics.speed type="number" class="uppercase bold"}}
        </fieldset>

        <fieldset>
            {{>heroes-unbound.heroSheet.characteristic characteristics.dexterity type="number" class="uppercase bold"}}
            {{>heroes-unbound.heroSheet.characteristic characteristics.intelligence type="number" class="uppercase bold"}}
            {{>heroes-unbound.heroSheet.characteristic characteristics.ego type="number" class="uppercase bold"}}
        </fieldset>
    </section>
</div>